{
  "openapi": "3.0.3",
  "info": {
    "title": "Unified Smart Plug API",
    "version": "1.1.0",
    "description": "Combined API for AC, Cooker, Lights, Laundry, Thermostat, and Dehumidifier smart plugs, supporting home/device scoping via /home/{id}/ paths."
  },
  "servers": [
    {
      "url": "http://localhost:1880",
      "description": "Local Node-RED instance"
    }
  ],
  "paths": {
    "/home/{id}/smartplug/ac/webhook": {
      "post": {
        "summary": "Smart AC Webhook",
        "description": "Turn the smart AC on/off and optionally set temperature and mode.",
        "operationId": "setACPlugState",
        "tags": ["SmartPlug"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" },
            "description": "Home or device ID"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "state": {
                    "type": "string",
                    "enum": ["on", "off"],
                    "description": "Desired Smart AC plug state"
                  },
                  "temperature": {
                    "type": "number",
                    "minimum": 16,
                    "maximum": 30,
                    "description": "Target temperature in Celsius"
                  },
                  "mode": {
                    "type": "string",
                    "enum": ["cool", "heat", "fan", "auto"],
                    "description": "AC operating mode"
                  }
                },
                "required": ["state"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Smart AC state changed successfully"
          },
          "400": { "description": "Invalid parameters" }
        }
      }
    },

