{
  "asyncapi": "3.0.0",
  "info": {
    "title": "SmartHome MQTT API",
    "version": "1.0.0",
    "description": "AsyncAPI specification for SmartHome devices over MQTT."
  },
  "defaultContentType": "application/json",
  "servers": {
    "mqttBroker": {
      "host": "172.17.0.1:1883",
      "protocol": "mqtt",
      "description": "Local MQTT broker for SmartHome communication"
    }
  },
  "channels": {
    "deviceStatus": {
      "address": "smarthome/device/{deviceId}/status",
      "parameters": {
        "deviceId": {
          "description": "The unique ID of the device."
        }
      },
      "messages": {
        "statusMessage": {
          "$ref": "#/components/messages/deviceStatusMsg"
        }
      }
    },
    "deviceCommand": {
      "address": "smarthome/device/{deviceId}/command",
      "parameters": {
        "deviceId": {
          "description": "The unique ID of the device."
        }
      },
      "messages": {
        "commandMessage": {
          "$ref": "#/components/messages/deviceCommandMsg"
        }
      }
    }
  },
  "operations": {
    "receiveDeviceStatus": {
      "action": "receive",
      "channel": {
        "$ref": "#/channels/deviceStatus"
      },
      "summary": "Receive status updates from SmartHome devices."
    },
    "sendDeviceCommand": {
      "action": "send",
      "channel": {
        "$ref": "#/channels/deviceCommand"
      },
      "summary": "Send control commands to SmartHome devices."
    }
  },
  "components": {
    "messages": {
      "deviceStatusMsg": {
        "name": "DeviceStatus",
        "title": "Device Status Message",
        "summary": "Status update from a device",
        "payload": {
          "type": "object",
          "properties": {
            "deviceId": {
              "type": "string"
            },
            "deviceType": {
              "type": "string",
              "enum": ["laundry", "fridge", "light", "oven", "water_heater"]
            },
            "status": {
              "type": "string",
              "description": "General device status",
              "enum": ["on", "off", "idle", "active", "error"]
            },
            "timestamp": {
              "type": "string",
              "format": "date-time"
            }
          },
          "required": ["deviceId", "deviceType", "status", "timestamp"]
        }
      },
      "deviceCommandMsg": {
        "name": "DeviceCommand",
        "title": "Device Command Message",
        "summary": "Command to control a device",
        "payload": {
          "type": "object",
          "properties": {
            "deviceId": {
              "type": "string"
            },
            "action": {
              "type": "string",
              "enum": ["turn_on", "turn_off", "set_temperature", "start", "stop"]
            },
            "parameters": {
              "type": "object",
              "description": "Optional parameters for the action (e.g., temperature)"
            },
            "timestamp": {
              "type": "string",
              "format": "date-time"
            }
          },
          "required": ["deviceId", "action", "timestamp"]
        }
      }
    }
  }
}