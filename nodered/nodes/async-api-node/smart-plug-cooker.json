{
  "openapi": "3.0.3",
  "info": {
    "title": "Cooker Smart Plug API",
    "version": "1.0.0",
    "description": "An OpenAPI definition for controlling the smart cooker plug and monitoring its state or energy usage."
  },
  "servers": [
    {
      "url": "http://localhost:1880",
      "description": "Local Node-RED instance"
    }
  ],
  "paths": {
    "/smartplug/cooker/webhook": {
      "post": {
        "summary": "Cooker Smart Plug Webhook",
        "description": "Webhook endpoint to turn the cooker's smart plug on or off.",
        "operationId": "setCookerPlugState",
        "tags": [
          "SmartPlug"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "state": {
                    "type": "string",
                    "enum": [
                      "on",
                      "off"
                    ],
                    "description": "Desired Cooker Smart Plug state"
                  }
                },
                "required": [
                  "state"
                ]
              },
              "example": {
                "state": "on"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Cooker Smart Plug state successfully changed",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "Cooker Smart Plug turned on"
                    },
                    "state": {
                      "type": "string",
                      "enum": [
                        "on",
                        "off"
                      ]
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid state specified"
          }
        }
      }
    }
  },
  "components": {},
  "tags": [
    {
      "name": "SmartPlug",
      "description": "Endpoints for controlling and monitoring smart plugs (e.g., cooker, thermostat, etc.)"
    }
  ]
}
