{
  "asyncapi": "3.0.0",
  "info": {
    "title": "Sample AsyncAPI",
    "version": "1.0.0",
    "description": "This is a sample AsyncAPI 3.0.0 specification for a simple messaging system."
  },
  "servers": {
    "production": {
      "url": "mqtt://broker.example.com",
      "protocol": "mqtt",
      "description": "MQTT broker for production"
    },
    "development": {
      "url": "ws://dev-broker.example.com",
      "protocol": "ws",
      "description": "WebSocket broker for development"
    }
  },
  "channels": {
    "sensor/data": {
      "description": "Channel for receiving sensor data",
      "messages": {
        "SensorData": {
          "contentType": "application/json",
          "payload": {
            "type": "object",
            "properties": {
              "sensorId": {
                "type": "string",
                "description": "Unique identifier for the sensor"
              },
              "temperature": {
                "type": "number",
                "format": "float",
                "description": "Temperature reading from the sensor"
              },
              "timestamp": {
                "type": "string",
                "format": "date-time",
                "description": "Time of the reading"
              }
            }
          }
        }
      }
    },
    "alerts": {
      "description": "Channel for receiving alert messages",
      "messages": {
        "AlertMessage": {
          "contentType": "application/json",
          "payload": {
            "type": "object",
            "properties": {
              "alertType": {
                "type": "string",
                "description": "Type of alert (e.g., 'HIGH_TEMP', 'LOW_TEMP')"
              },
              "message": {
                "type": "string",
                "description": "Human-readable alert message"
              },
              "timestamp": {
                "type": "string",
                "format": "date-time",
                "description": "Time the alert was triggered"
              }
            }
          }
        }
      }
    }
  },
  "operations": {
    "publishSensorData": {
      "action": "send",
      "channel": "sensor/data",
      "description": "Publishes sensor data messages",
      "messages": [
        { "$ref": "#/channels/sensor/data/messages/SensorData" }
      ]
    },
    "subscribeToAlerts": {
      "action": "receive",
      "channel": "alerts",
      "description": "Subscribes to alert messages",
      "messages": [
        { "$ref": "#/channels/alerts/messages/AlertMessage" }
      ]
    }
  },
  "components": {
    "messages": {
      "SensorData": {
        "contentType": "application/json",
        "payload": {
          "type": "object",
          "properties": {
            "sensorId": {
              "type": "string"
            },
            "temperature": {
              "type": "number",
              "format": "float"
            },
            "timestamp": {
              "type": "string",
              "format": "date-time"
            }
          }
        }
      },
      "AlertMessage": {
        "contentType": "application/json",
        "payload": {
          "type": "object",
          "properties": {
            "alertType": {
              "type": "string"
            },
            "message": {
              "type": "string"
            },
            "timestamp": {
              "type": "string",
              "format": "date-time"
            }
          }
        }
      }
    }
  }
}
